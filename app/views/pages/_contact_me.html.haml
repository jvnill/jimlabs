        = link_to 'http://stackoverflow.com/users/337166/jvnill', class: 'icon icon-stackoverflow', target: '_blank' do
          %span Stack Overflow

.row
  .small-12.columns
    %h2.title{ style: 'margin-top:3em' } Send an Inquiry

    = form_for Enquiry.new do |f|
      .row
        .small-10.large-8.column.small-centered
          %label
            %span Name
            = f.text_field :name

      .row
        .small-10.large-8.column.small-centered
          %label
            %span Email
            = f.text_field :email

      .row
        .small-10.large-8.column.small-centered
          %label
            %span Company Name
            = f.text_field :company

      .row
        .small-10.large-8.column.small-centered
          %label
            %span Message
            = f.text_area :message, rows: 5

      .row
        .small-10.large-8.column.text-center.small-centered
          = f.submit 'Send', class: 'button'
