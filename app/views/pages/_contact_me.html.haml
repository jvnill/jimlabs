  .small-12.columns
    %h2.title Contact Me

    %ul.small-block-grid-3.large-block-grid-6
      %li
        = link_to 'http://github.com/jvnill', class: 'icon icon-github', target: '_blank' do
          %span Github

      %li
        = link_to 'http://au.linkedin.com/pub/jim-ruther-nill/38/62a/ab4', class: 'icon icon-linkedin', target: '_blank' do
          %span LinkedIn

      %li
        = link_to 'https://twitter.com/jvnill', class: 'icon icon-twitter', target: '_blank' do
          %span Twitter

      %li
        = link_to 'https://www.facebook.com/jim.nill', class: 'icon icon-facebook', target: '_blank' do
          %span Facebook

      %li
        = link_to 'skype:jimboker?call', class: 'icon icon-skype' do
