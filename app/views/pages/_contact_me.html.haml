.small-3.columns &nbsp;

.small-18.columns
  %h2.title Contact Me

  .row
    .small-4.columns
      = link_to 'http://github.com/jvnill', class: 'icon icon-github', target: '_blank' do
        %span Github

    .small-4.columns
      = link_to 'http://au.linkedin.com/pub/jim-ruther-nill/38/62a/ab4', class: 'icon icon-linkedin', target: '_blank' do
        %span LinkedIn

    .small-4.columns
      = link_to 'https://twitter.com/jvnill', class: 'icon icon-twitter', target: '_blank' do
        %span Twitter

    .small-4.columns
      = link_to 'https://www.facebook.com/jim.nill', class: 'icon icon-facebook', target: '_blank' do
        %span Facebook

    .small-4.columns
      = link_to 'skype:jimboker?call', class: 'icon icon-skype' do
        %span Skype

    .small-4.columns
      = link_to 'http://stackoverflow.com/users/337166/jvnill', class: 'icon icon-stackoverflow', target: '_blank' do
        %span Stack Overflow

  %h2.title{ style: 'margin-top:3em' } Send an Inquiry

  .row
    .small-5.columns &nbsp;

    .small-14.columns
      = form_for Enquiry.new do |f|
        .row
          .small-24.columns
            %label
              %span Name
              = f.text_field :name

        .row
          .small-24.columns
            %label
              %span Email
              = f.text_field :email

        .row
          .small-24.columns
            %label
              %span Company Name
              = f.text_field :company

        .row
          .small-24.columns
            %label
              %span Message
              = f.text_area :message, rows: 5

        .row
          .small-24.columns{ style: 'text-align:center;' }= f.submit 'Send', class: 'button'

    .small-5.columns &nbsp;

.small-3.columns &nbsp;
