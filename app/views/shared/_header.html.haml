.contain-to-grid
  %nav.top-bar{ data: { topbar: true }, role: 'navigation' }
    %ul.title-area
      %li.name
        = link_to root_url do
          = image_tag 'logo.png', alt: 'Jimlabs'
          %h1 Jim Ruther Nill's blog and portfolio

    %section.top-bar-section
      %ul.right
        %li= link_to 'me', waypoint_path('me'), data: { scroll: true }
        %li= link_to 'portfolio', waypoint_path('portfolio'), data: { scroll: true }
        %li= link_to 'contact', waypoint_path('contact-me'), data: { scroll: true }
        %li= link_to 'blog', posts_path
