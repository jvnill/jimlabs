.sidebar
  Blog Archives
  %ul
    - Post.count_by_year.each do |year, count|
      %li= link_to "#{year.to_i} (#{count})", year_posts_path(year.to_i)

  #flashcontent

  -#= link_to 'http://stackoverflow.com/users/337166/jvnill' do
    = image_tag 'http://stackoverflow.com/users/flair/337166.png?theme=dark', width: 208, height: 58, alt: 'profile for jvnill at Stack Overflow, Q&A for professional and enthusiast programmers', title: 'profile for jvnill at Stack Overflow, Q&A for professional and enthusiast programmers'

  %ul.links
    %li= link_to 'Github', 'http://github.com/jvnill', class: 'icon icon-only icon-github', target: '_blank'
    %li= link_to 'LinkedIn', 'http://au.linkedin.com/pub/jim-ruther-nill/38/62a/ab4', class: 'icon icon-only icon-linkedin', target: '_blank'
    %li= link_to 'Twitter', 'https://twitter.com/jvnill', class: 'icon icon-only icon-twitter', target: '_blank'
    %li= link_to 'Facebook', 'https://www.facebook.com/jim.nill', class: 'icon icon-only icon-facebook', target: '_blank'
    %li= link_to 'Skype', 'skype:jimboker?call', class: 'icon icon-only icon-skype'
    %li= link_to 'Stack Overflow', 'http://stackoverflow.com/users/337166/jvnill', class: 'icon icon-only icon-stackoverflow', target: '_blank'

  :javascript
    var so = new SWFObject("/tagcloud.swf", "tagcloud", "180", "180", "7", "#336699");
    so.addParam("wmode", "transparent");
    so.addVariable("mode", "tags");
    so.addVariable("distr", "true");
    so.addVariable("tcolor", "0xd2691d");
    so.addVariable("tcolor2", "0x555555");
    so.addVariable("hicolor", "0xffffff");
    so.addVariable("tagcloud", "&lt;tags&gt;#{Post.tag_counts.collect {|tag| "&lt;a href='#{tag_url(tag.name)}' style='#{10 + tag.count*2}'&gt;#{tag.name}&lt;/a&gt;" if tag.count > 1}.compact.join}&lt;/tags&gt;");
    so.write("flashcontent");
